<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p><span style="font-size: 12pt;font-weight: bold">Title:</span><%= post.title %></p>
    <p><span style="font-size: 12pt;font-weight: bold">Body:</span><%= post.body[..16] %>..</p>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "New post", new_post_path %>
<% end %>